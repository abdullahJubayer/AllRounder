<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aj_MainActivity"
    android:orientation="vertical"
    android:background="@drawable/aj_grad_bg"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    >


        <TextView
            android:id="@+id/share_info_title"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="All Rounder"
            android:textSize="40dp"
            android:textColor="@color/colorAccent"

            />


        <Button android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login as a User"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/aj_group_users"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/aj_btn_bg"
            />


        <Button android:id="@+id/admin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login as a Admin"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/aj_admin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/aj_btn_bg"
            />

        <TextView android:id="@+id/new_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="No account yet? Create one"
            android:gravity="center"
            android:textSize="16dip"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            />


</LinearLayout>