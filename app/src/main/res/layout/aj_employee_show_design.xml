<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/whitegray"
    >

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/employee_show_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            />


        <LinearLayout
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/employee_show_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <TextView
                android:id="@+id/employee_show_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/employee_show_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/employee_show_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="5"
    android:padding="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_height="70dp">
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/ic_call_black_24dp"
        android:id="@+id/callBtnId"
        android:layout_height="match_parent" />
     <Button
        android:layout_width="0dp"
        android:layout_weight="1"
       android:background="@drawable/ic_message_black_24dp"
         android:id="@+id/smsBtnId"
        android:layout_height="match_parent" />
     <Button
        android:layout_width="0dp"
         android:id="@+id/emailBtnId"
        android:layout_weight="1"
         android:background="@drawable/ic_email_"
        android:layout_height="match_parent" />

  <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        />



</LinearLayout>



    </LinearLayout>
   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>

-->
</LinearLayout>