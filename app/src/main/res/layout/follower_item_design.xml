<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#286695BB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/follower_image"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/follower_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/follower_image"
            android:layout_toRightOf="@+id/follower_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/follower_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/follower_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-24dp"
            android:layout_toRightOf="@+id/follower_image"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Description" />

    </RelativeLayout>

</android.support.v7.widget.CardView>