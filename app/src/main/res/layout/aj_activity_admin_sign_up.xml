<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.aj_admin_signUp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@drawable/aj_grad_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit_admin_sign"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="275dp"
            android:visibility="invisible"
            app:SpinKit_Color="@color/colorAccent" />


        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/admin_profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aj_image_choose"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:text="Please Select Logo"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#FF4040"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText android:id="@+id/admin_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:background="@drawable/aj_et_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />

            <EditText android:id="@+id/admin_company_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="text"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Company/Institute Name"
                android:paddingLeft="10dp"
                android:background="@drawable/aj_et_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />

            <!--  Email Label -->
            <EditText android:id="@+id/admin_email_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:background="@drawable/aj_et_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />

            <!-- mobile number -->
            <EditText android:id="@+id/admin_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Mobile Number"
                android:paddingLeft="10dp"
                android:background="@drawable/aj_et_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />

            <!-- Password Label -->
            <EditText android:id="@+id/admin_pass_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:background="@drawable/aj_et_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />
            <!-- Password Re-enter Label -->
            <EditText android:id="@+id/admin_re_pass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Re-enter Password"
                android:paddingLeft="10dp"
                android:background="@drawable/aj_et_bg"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                />


            <!-- Signup Button -->
            <Button
                android:id="@+id/admin_sign_up_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:text="Create Account"
                android:textColor="@color/colorAccent"
                android:background="@drawable/aj_btn_bg"
                />

            <TextView android:id="@+id/admin_to_login_back"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Already a Account? Login"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dip"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


    </RelativeLayout>


</ScrollView>