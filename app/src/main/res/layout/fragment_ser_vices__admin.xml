<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".Admin.SerVices_Admin_FMT">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit_release_result"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="183dp"
            android:visibility="invisible"
            app:SpinKit_Color="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Services"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:maxLines="4"
                android:gravity="top|left"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp"
                android:hint="Set Title"
                android:paddingLeft="10dp"
                android:id="@+id/result_title"
                android:background="@drawable/aj_edit_text_border"
                />

            <EditText
                android:id="@+id/result_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Set Message"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:lines="5"
                android:maxLines="30"
                android:gravity="top|left"
                android:textSize="20sp"
                android:background="@drawable/aj_edit_text_border"
                android:lineSpacingExtra="3dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/admin_message_image"
                android:src="@drawable/aj_admin_image_company"
                android:background="@drawable/aj_edit_text_border"
                android:padding="10dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/release_button"
                android:background="@drawable/buttonbg"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Release"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
</LinearLayout>


</FrameLayout>